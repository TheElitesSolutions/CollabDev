# =================================
# CollabDev+ Root Environment Config
# =================================
# This file contains environment variables for docker-compose deployments
# Copy this to .env and update values for your environment

# =================================
# General Settings
# =================================
NODE_ENV=production
TZ=UTC

# =================================
# PostgreSQL Database
# =================================
POSTGRES_USER=collabdev
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=collabdev
POSTGRES_PORT=5432

# =================================
# Redis Cache
# =================================
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# =================================
# Neo4j Graph Database (Optional)
# =================================
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-neo4j-password
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687

# =================================
# API Service
# =================================
API_PORT=3001
CORS_ORIGIN=http://localhost:3000

# Better Auth Configuration
BETTER_AUTH_SECRET=your-secure-auth-secret-min-32-chars
BETTER_AUTH_URL=http://localhost:3001

# =================================
# Web Service
# =================================
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# =================================
# Monitoring (Optional)
# =================================
SENTRY_DSN=

# =================================
# Docker Registry (for CI/CD)
# =================================
REGISTRY=ghcr.io
IMAGE_NAME=your-org/collabdev
